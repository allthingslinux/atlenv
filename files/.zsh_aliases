#!/bin/bash
# Eza is a modern replacement for ls
alias ls='eza --color=auto'
alias ll='eza -l'
alias la='eza -la'
alias l='eza -lA'

# Grep with color
alias grep='grep --color=auto'

# Zoxide
alias cd='z'

# Docker
alias d='docker'
alias dc='docker compose'
alias dcu='docker compose up -d'
alias dcd='docker compose down'
alias dcr='docker compose restart'
alias dsh='docker exec -it $1 bash'

# tmux
alias tmuxstart='tmux new-session -s $1'
alias tmuxattach='tmux attach-session -t $1'
alias tmuxkill='tmux kill-session -t $1'
alias tmuxlist='tmux list-sessions'
